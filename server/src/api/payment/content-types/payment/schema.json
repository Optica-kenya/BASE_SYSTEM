{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sale": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sale.sale",
      "inversedBy": "payments"
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "min": 0
    },
    "method": {
      "type": "enumeration",
      "enum": [
        "cash",
        "mpesa",
        "card",
        "bank_transfer"
      ]
    },
    "payment_date": {
      "type": "date"
    },
    "received_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "payments"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": [
        "confirmed",
        "reversed"
      ]
    },
    "payment_ref": {
      "type": "string",
      "default": "code"
    }
  }
}
