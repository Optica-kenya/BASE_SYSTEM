{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Frame",
        "Lens",
        "Contact Lens",
        "Accessory"
      ]
    },
    "sku": {
      "type": "uid"
    },
    "selling_price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "cost_price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "stock_quantity": {
      "type": "integer",
      "min": 0
    },
    "reorder_level": {
      "type": "integer",
      "min": 0
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}
