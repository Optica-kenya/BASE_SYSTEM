{
  "kind": "collectionType",
  "collectionName": "sale_items",
  "info": {
    "singularName": "sale-item",
    "pluralName": "sale-items",
    "displayName": "SaleItem"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sale": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sale.sale",
      "inversedBy": "sale_items"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "sale_items"
    },
    "quantity": {
      "type": "integer",
      "min": 0
    },
    "unit_price": {
      "type": "decimal",
      "min": 0
    },
    "line_total": {
      "type": "decimal"
    },
    "added_at": {
      "type": "datetime"
    }
  }
}
